{
    "name": "Euphonia Downloader",
    "description": "Easily download new musics for Euphonia",
    "version": "1.0",
    "default_locale": "en",
    "action": {
        "default_popup": "index.html"
    },
    "options_page": "options.html",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*", "https://music.youtube.com/*"],
            "js": ["js/content_script.js"]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "manifest_version": 3
}